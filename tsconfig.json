{
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "./test/**/*"],

    "compilerOptions": {
        "module":"ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs":true,
        "experimentalDecorators": true,
        "moduleResolution": "bundler",
        "baseUrl": "./src",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "sourceMap": true
    },
}